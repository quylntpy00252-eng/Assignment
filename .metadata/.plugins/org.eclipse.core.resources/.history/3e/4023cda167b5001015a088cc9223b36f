<script>
    // Hàm hiển thị Modal chung
    function showModal(modalId) {
        document.getElementById(modalId).style.display = 'flex';
        document.body.classList.add('modal-open'); // Nếu bạn có class này
    }

    // Hàm đóng Modal chung
    function closeModal(modalId) {
        document.getElementById(modalId).style.display = 'none';
        document.body.classList.remove('modal-open');
        // Tùy chọn: Reset form khi đóng modal
        const form = document.getElementById(modalId).querySelector('form');
        if (form) form.reset(); 
    }
    
    // Đóng Modal khi click ra ngoài
    window.onclick = function(event) {
        const modals = document.querySelectorAll('.modal, .custom-modal'); // Chọn tất cả modal
        modals.forEach(modal => {
            if (event.target === modal) {
                closeModal(modal.id);
            }
        });
    };

    // Hàm mở Modal Sửa tin tức (Cần điều chỉnh theo cấu trúc form của bạn)
    function openEditNews(element) {
        const modalId = 'edit-news-modal'; // Đảm bảo ID này đúng với Modal Sửa tin
        const modal = document.getElementById(modalId);
        if (!modal) return;
        
        // Lấy dữ liệu từ thuộc tính data-* của nút Sửa (ví dụ: data-id, data-title)
        const newsId = element.dataset.id;
        const title = element.dataset.title;
        // ... (Thêm các biến khác như content, categoryId, home, position, status)

        // Gán dữ liệu vào các trường Input trong Modal Sửa
        document.getElementById('edit-news-id').value = newsId || '';
        document.getElementById('edit-title').value = title || '';
        // ... (Gán giá trị cho các input/select khác)

        showModal(modalId);
    }
    
    // Hàm mở Modal Thêm tin tức (Nếu bạn dùng Modal cho việc thêm)
    // Nếu bạn dùng form ở trang edit_news.jsp để thêm/sửa thì bỏ qua hàm này
    function openAddNews() {
         showModal('add-news-modal');
    }
</script>
