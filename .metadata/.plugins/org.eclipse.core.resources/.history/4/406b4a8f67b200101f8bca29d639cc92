    <script>
        const MODAL_ID = 'news-modal';
        const FORM_ID = 'news-form';
        const CONTEXT_PATH = '${pageContext.request.contextPath}';

        function showModal(title, buttonText) {
            document.getElementById('modal-title').innerText = title;
            document.getElementById('submit-button').innerText = buttonText;
            document.getElementById(MODAL_ID).style.display = 'flex';
            document.body.classList.add('modal-open');
        }

        function closeModal(modalId) {
            const modal = document.getElementById(modalId);
            if (modal) {
                modal.style.display = 'none';
                document.body.classList.remove('modal-open');
                
                // Reset form và các trường ẩn/ảnh
                const form = document.getElementById(FORM_ID);
                if (form) form.reset();
                document.getElementById('image').required = false; // Bỏ required cho file input
                document.getElementById('current-image-preview').style.display = 'none';
                document.getElementById('preview-img').src = '';
            }
        }

        window.onclick = function(event) {
            if (event.target.id === MODAL_ID) {
                closeModal(MODAL_ID);
            }
        };

        function openAddNewsModal() {
            closeModal(MODAL_ID); // Đảm bảo reset form trước
            
            // Thiết lập chế độ Thêm mới
            document.getElementById('news-id').value = '';
            document.getElementById('image').required = true; // Yêu cầu ảnh khi thêm mới
            
            showModal('Thêm Tin Tức Mới', 'Lưu tin mới');
        }

        function openEditNewsModal(element) {
            closeModal(MODAL_ID); // Đảm bảo reset form trước

            // Lấy dữ liệu từ data-*
            const id = element.dataset.id;
            const title = element.dataset.title;
            const categoryId = element.dataset.categoryid;
            const image = element.dataset.image;
            const content = element.dataset.content;
            const postedDate = element.dataset.posteddate;
            const position = element.dataset.position;
            const viewCount = element.dataset.viewcount;

            // Điền dữ liệu vào form
            document.getElementById('news-id').value = id;
            document.getElementById('title').value = title;
            document.getElementById('category').value = categoryId;
            document.getElementById('content').value = content;
            document.getElementById('postedDate').value = postedDate;
            document.getElementById('position').value = position;
            document.getElementById('view-count').value = viewCount;
            document.getElementById('old-image').value = image;
            
            // Hiển thị ảnh hiện tại
            if (image) {
                document.getElementById('preview-img').src = CONTEXT_PATH + '/uploads/' + image;
                document.getElementById('current-image-preview').style.display = 'block';
                document.getElementById('image').required = false; // Không yêu cầu chọn lại ảnh
            } else {
                document.getElementById('image').required = true; // Yêu cầu ảnh nếu không có ảnh cũ
            }

            // Thiết lập chế độ Sửa
            showModal('Sửa Tin Tức', 'Cập nhật tin');
        }
    </script>
</body>
