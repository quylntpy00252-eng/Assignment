package adminServlet;

import java.io.IOException;
import java.util.List;

import DAO.CategoryDAO; 
import DAO.CategoryDAOImpl; 
import DAO.NewsDAO;
import DAO.NewsDAOImpl;
import DAO.UserDAO;
import DAO.UserDAOImpl;
import Entity.Category; 
import Entity.News;
import Entity.User;
import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;

@WebServlet("/admin")
public class AdminServlet extends HttpServlet {
    @Override
    protected void doGet(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        
        // Khởi tạo DAOs
        CategoryDAO categoryDAO = new CategoryDAOImpl();
        NewsDAO newsDAO = new NewsDAOImpl();
        UserDAO userDAO = new UserDAOImpl();
        
        // 1. FIX: DỮ LIỆU MENU (Categories)
        List<Category> categories = categoryDAO.findAll();
        request.setAttribute("categories", categories); 
        
        // 2. DỮ LIỆU CỘT TRÁI (homeLeft)
        List<News> homeLeft = newsDAO.findHomeByPosition(1); 
        request.setAttribute("homeLeft", homeLeft);
        
        // 3. FIX: DỮ LIỆU CỘT PHẢI (topViewed & latestNews) - ĐÃ KHỚP VỚI JSP
        // Giả định lấy 3 tin đã duyệt
        List<News> topViewed = newsDAO.findTopViewedApproved(3); 
        List<News> latestNews = newsDAO.findLatestApproved(3); 
        
        request.setAttribute("topViewed", topViewed); // FIX LỖI TÊN BIẾN
        request.setAttribute("latestNews", latestNews); // FIX LỖI TÊN BIẾN
        
        // 4. DỮ LIỆU NGƯỜI DÙNG (Giữ nguyên)
        List<User> users = userDAO.findAll();
        request.setAttribute("users", users);
        
        request.getRequestDispatcher("/admin/admin.jsp").forward(request, response);
    }
}