<%@page import="Entity.News"%>
<%@page import="java.util.List"%>
<%@page import="DAO.NewsDAO"%>
<%@page contentType="text/html" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <title>Quản Lý Tin Tức</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- Font Awesome Icons -->
        <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
        <style>
            .container-fluid { max-width: 1200px; }
            .status-draft { color: #dc3545; font-weight: bold; } /* Chưa duyệt */
            .status-approved { color: #198754; font-weight: bold; } /* Đã duyệt */
            .status-pending { color: #ffc107; font-weight: bold; } /* Chờ duyệt */
            .table th, .table td { vertical-align: middle; }
        </style>
    </head>
    <body>
        <div class="container-fluid mt-4">
            <h1 class="mb-4 text-center text-primary"><i class="fas fa-newspaper"></i> Quản Lý Danh Sách Tin Tức</h1>
            
            <%
                // 1. Hiển thị thông báo thành công (nếu có)
                String successMessage = (String) session.getAttribute("successMessage");
                if (successMessage != null) {
            %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Thành công!</strong> <%= successMessage %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <%
                    session.removeAttribute("successMessage");
                }
            %>
            
            <!-- Nút thêm mới -->
            <div class="d-flex justify-content-end mb-3">
                <a href="<%= request.getContextPath() %>/admin/add_edit_news.jsp" class="btn btn-success">
                    <i class="fas fa-plus"></i> Thêm Tin Mới
                </a>
            </div>
            
            <%
                // 2. Lấy danh sách tin tức từ DAO
                NewsDAO dao = new NewsDAO();
                List<News> newsList = dao.getAllNews();
            %>
            
            <!-- Bảng danh sách tin tức -->
            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Tiêu đề</th>
                            <th>Tác giả</th>
                            <th>Thể loại</th>
                            <th>Ngày đăng</th>
                            <th>Lượt xem</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%
                            if (newsList.isEmpty()) {
                        %>
                        <tr>
                            <td colspan="8" class="text-center text-muted">Chưa có tin tức nào được đăng.</td>
                        </tr>
                        <%
                            } else {
                                for (News news : newsList) {
                        %>
                        <tr>
                            <td><%= news.getId() %></td>
                            <td><%= news.getTitle() %></td>
                            <td><%= news.getAuthorName() %></td> 
                            <td><%= news.getCategoryName() %></td> 
                            <td><%= news.getPostedDate() %></td>
                            <td><%= news.getViewCount() %></td>
                            <td>
                                <% 
                                    String statusClass = "status-pending";
                                    if ("Đã duyệt".equals(news.getStatus())) {
                                        statusClass = "status-approved";
                                    } else if ("Chưa duyệt".equals(news.getStatus())) {
                                        statusClass = "status-draft";
                                    } 
                                %>
                                <span class="<%= statusClass %>"><%= news.getStatus() %></span>
                            </td>
                            <td>
                                <!-- Link chỉnh sửa: Cần tạo EditNewsServlet để tải dữ liệu lên form -->
                                <a href="<%= request.getContextPath() %>/admin/edit_news?id=<%= news.getId() %>" 
                                   class="btn btn-sm btn-info text-white me-2" title="Chỉnh sửa tin tức">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <!-- Nút xóa -->
                                <button type="button" class="btn btn-sm btn-danger" 
                                        onclick="confirmDelete('<%= news.getId() %>', '<%= news.getTitle() %>')"
                                        title="Xóa tin tức">
                                    <i class="fas fa-trash"></i> Xóa
                                </button>
                            </td>
                        </tr>
                        <%
                                }
                            }
                        %>
                    </tbody>
                </table>
            </div>
            
            <!-- Script cho Bootstrap -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
            
            <!-- Hàm xác nhận xóa -->
            <script>
                function confirmDelete(id, title) {
                    if (confirm("Bạn có chắc chắn muốn xóa tin tức:\n\"" + title + "\" (ID: " + id + ")?")) {
                        // TODO: Triển khai DeleteNewsServlet
                        alert("Tính năng xóa chưa được triển khai. Vui lòng tạo DeleteNewsServlet.");
                        // window.location.href = "<%= request.getContextPath() %>/admin/delete_news?id=" + id;
                    }
                }
            </script>
        </div>
    </body>
</html>
