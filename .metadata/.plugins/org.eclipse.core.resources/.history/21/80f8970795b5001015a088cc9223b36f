package reporterServlet;

import java.io.IOException;
import java.util.List;

import DAO.CategoryDAO;
import DAO.CategoryDAOImpl;
import DAO.NewsDAO;
import DAO.NewsDAOImpl;
import Entity.News;
import Entity.User;
import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import jakarta.servlet.http.HttpSession;

@WebServlet("/reporter/manage_my_news")
public class ReporterManageNewsServlet extends HttpServlet {

    @Override
    protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
        // Lấy session và User
        HttpSession session = req.getSession();
        User user = (User) session.getAttribute("user");

        if (user == null) {
            resp.sendRedirect(req.getContextPath() + "/login");
            return;
        }

        // 1. Lấy danh sách tin tức CỦA PHÓNG VIÊN hiện tại
        NewsDAO newsDAO = new NewsDAOImpl();
        List<News> myNewsList = (List<News>) newsDAO.findById(user.getId()); 
        req.setAttribute("newsList", myNewsList);

        // 2. Lấy danh mục (cho Menu)
        CategoryDAO categoryDAO = new CategoryDAOImpl();
        req.setAttribute("categories", categoryDAO.findAll());

        // 3. Forward đến trang JSP của phóng viên
        req.getRequestDispatcher("/reporter/manage_my_news.jsp").forward(req, resp);
    }
}